---
import Badge from "@/components/Badge.astro";
import cv from "@/cv.json";

const { hardSkills } = cv.skills;
---
<section class='leading-normal text-balance flex flex-col gap-1'>
  <h2 class="text-2xl capitalize font-semibold">tecnologias</h2>
  <ul class='w-full h-full flex flex-wrap items-center gap-3 font-light'>
    {
      hardSkills.map((text) => (
        <li>
          <Badge>{text}</Badge>
        </li>
      ))
    }
  </ul>
</section>
